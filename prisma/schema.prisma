generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// https://zenn.dev/masa5714/articles/7b887b9c8cc87a
model User {
  id        String   @id @default(dbgenerated("uuid_generate_v4()"))
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("users")
}

model Article {
  id               String   @id @default(dbgenerated("uuid_generate_v4()"))
  providerId       String
  title            String
  siteUrl          String?
  type             String
  creator          String?
  summary          String?
  url              String?
  imageUrl         String?
  publishTimestamp DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now())
  Provider         Provider @relation(fields: [providerId], references: [id])

  @@map("articles")
}

model Provider {
  id          String    @id @default(dbgenerated("uuid_generate_v4()"))
  feedUrl     String
  title       String?
  description String?
  url         String?
  articles    Article[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())

  @@map("providers")
}
