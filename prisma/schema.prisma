generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(dbgenerated("uuid_generate_v4()"))
  email     String     @unique
  name      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())
  Timeline  Timeline[]

  @@map("users")
}

model Article {
  id               String   @id @default(dbgenerated("uuid_generate_v4()"))
  providerId       String
  title            String
  siteUrl          String?
  type             String
  creator          String?
  summary          String?
  url              String?
  imageUrl         String?
  publishTimestamp DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now())
  ogpDescription   String?
  ogpImageUrl      String?
  Provider         Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@map("articles")
}

model Provider {
  id             String    @id @default(dbgenerated("uuid_generate_v4()"))
  feedUrl        String
  title          String?
  description    String?
  url            String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @default(now())
  ogpDescription String?
  ogpImageUrl    String?
  articles       Article[]

  @@map("providers")
}

model Timeline {
  id        String         @id @default(dbgenerated("uuid_generate_v4()"))
  userId    String?
  title     String
  status    String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @default(now())
  dots      TimelineDots[]

  User User? @relation(fields: [userId], references: [id])
  @@map("timelines")
}

model TimelineDots {
  id          String   @id @default(dbgenerated("uuid_generate_v4()"))
  timelineId  String
  title       String
  description String
  date        DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  Timeline Timeline @relation(fields: [timelineId], references: [id], onDelete: Cascade)
  @@map("timeline_dots")
}
